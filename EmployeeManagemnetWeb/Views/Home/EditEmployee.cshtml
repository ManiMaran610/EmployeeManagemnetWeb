@model EmployeeManagemnetWeb.Models.Employee

<h1>Update Employee</h1>
<
<form method="post" action="EditToDb">
    <div class="form-group">
        <label for="EmployeeID">Employee ID</label>
        <input type="text" name="EmployeeId" placeholder="Enter ID " readonly="readonly" value="@Model.EmployeeID" class="form-control" />
        <p id="message" style="color:red ">@ViewBag.AlreadyExistsErrorMessage </p>
    </div>
    <div class="form-group">
        <label for="Name">Employee Name</label>

        <input type="text" name="name" placeholder="Enter Name" value=@Model.Name class="form-control" />
        <p id="message" style="color:red "></p>

    </div>
    
    <div class="form-group">
        <label for="DateOfBirth">DateOfBirth</label>
        <input type="date" name="DateOfBirth" placeholder="Enter Date of Birth" value=@Model.DateOfBirth class="form-control" />

    </div>
    <div class="form-group">
        <label for="DateOfJoining">DateOfJoining </label>
        <input type="date" name="DateOfJoining" placeholder="Enter Date Of Joining " value=@Model.DateOfJoining class="form-control" />

    </div>
    <div class="form-group">
        <label for="MobileNo">Mobile number</label>
        <input type="number" name="MobileNo" placeholder="Enter mobile number" value=@Model.MobileNo class="form-control" />

    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" name="Email" placeholder="Enter Email" value=@Model.Email class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary "> Click here to Submit</button>

</form>

